<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailsFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:textSize="25sp"
        android:text="Stats And Info"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/history_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/rainbow_button"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintBottom_toTopOf="@+id/spacer">
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/listFreqBtn"
            android:text="Symptom List/Frequency"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Trigger Food List/Frequency"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Additional Pain Statistics"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Placeholder"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Placeholder"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Placeholder"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Placeholder"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Options"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal" />
</androidx.constraintlayout.widget.ConstraintLayout>